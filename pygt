#!/usr/local/plan9/bin/rc
rfork e

ifs='
'

files=`{git ls-files |grep '.*\.py$'}

matches=`{>[2]/dev/null git grep -nE '^[ 	]*(def|class)[ 	]+'^$"*^'\(' $files}

switch ($#matches) {
    case 0
        echo no matches
	case 1
		B `{echo $matches(1) |sed -r 's/^(.*:[0-9]+):.*/\1/'}
	case *
	   echo ----------- gt $"* -----------
		for (match in $matches) {
			echo $match
		}
}
